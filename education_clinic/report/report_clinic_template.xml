    </t>
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                         <div class="text-center">
                        <strong> تقرير طبي  </strong>
                         </div>

                    <br></br>

                    <!--  Personal info -->

                    <table class="table align-middle"  style="width:100% ;border :2px solde black" cellpadding="12">
