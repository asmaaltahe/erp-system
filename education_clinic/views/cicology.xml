<odoo>

    <!-- startr tree viwe for Psychological -->
    <record model="ir.ui.view" id="eye_view_id">
        <field name="name">education.assessment.form</field>
        <field name="model">education.assessment</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Student Health Service" create="false">

                <header>
                    <button  class="oe_highlight" type="action" name="%(education_clinic.report_assessment)d"
                        string="Print"/>

                </header>

                <sheet>

                    <!--       header     -->
                    <div class="row navbar navbar-expand-sm  navbar-dark" style="border-radius: 10px;
    background-color: #187ebf;   color: white;">
                        <div class="col-sm">
                            <img src="napata_register/static/description/logo.jpeg" class="img-thumbnail"
                                 style="height:80px;width:120px"/>
                        </div>

                        <div class="col-sm   text-center">
                            <h1>
                                <p>
                                    <spane>كليــــــــــــــــة نبتـــــــــة</spane>
                                    <br/>
                                    <spane>NAPATA COLLEGE</spane>
                                </p>
                            </h1>
                        </div>
                        <div class="col-sm" style="  text-align:right">
                            <h3>
                                <p style="color: white; text-align: left;margin-left: 116px;">
                                    <spane>Alreydh-Khartoum/Sudan</spane>
                                    <br/>
                                    <spane>Tel :+249112203333</spane>
                                    <br/>
                                    <spane>Email:info@napata.net</spane>
                                    <br/>
                                    <spane>www:napata.net</spane>
                                </p>
                            </h3>

                        </div>
                    </div>
                    <div class="text-center" style="padding-bottom: 35px; padding-top: 40px;     color: black;">
                        <h2>
                            <span>Psychological Clinic</span>

                        </h2>
                    </div>


                    <!--            header-->


                    <group colspan="2" col="4">
                        <field name="date"/>
                        <field name="patient_id"/>
                    </group>

                    <group string="Student Information">
                        <table style="margin-left:160px;">
                            <tr>
                                <td style="padding-right:10px;">
                                    <field name="name"/>
                                </td>
                            </tr>
                        </table>
                    </group>


                    <group colspan="7" col="4" name="main">
                        <field name="program"/>
                        <field name="dob"/>
                        <field name="gender"/>
                        <field name="nationality"/>
                        <field name="religion"/>
                        <field name="social"/>

                    </group>
                    <notebook>
                        <page string="family Information">
                            <group colspan="6" col="4" name="main" string="Psychological Clinic">

                                <field name="desir"/>
                                <field name="reson" attrs="{'invisible':[('desir','=',True)]}"/>
                                <field name="father"/>
                                <field name="old" attrs="{'invisible':[('father','=',True)]}"/>
                                <field name="mother"/>
                                <field name="old2" attrs="{'invisible':[('mother','=',True)]}"/>
                            </group>

                            <group colspan="9" col="4">

                                <field name="number_brother"/>
                                <field name="number_family"/>
                                <field name="number_brother2"/>
                                <field name="applicant"/>
                                <field name="phone"/>
                            </group>

                            <group colspan="6" col="4">
                                <field name="internal_family"/>
                                <field name="relation"/>
                                <field name="married"/>
                                <field name="father2"/>
                                <field name="mother2"/>
                                <field name="friend"/>
                            </group>

                            <group colspan="4" col="4">
                                <field name="job_father"/>
                                <field name="level_edu"/>
                                <field name="job_mother"/>
                                <field name="level_edu2"/>
                            </group>

                        </page>

                        <page string="Personal Information">
                            <group col="6" name="main" string="Psychological Clinic">

                                <field name="sit"/>
                                <field name="dessition"/>
                                <field name="feel"/>
                            </group>
                            <group col="6">
                                <field name="agrasive"/>
                                <field name="fried"/>
                                <field name="died"/>
                            </group>
                            <group col="6">
                                <field name="arag"/>
                                <field name="any"/>
                                <field name="setting"/>
                            </group>
                            <group col="6">

                                <field name="magistion"/>
                                <field name="smale"/>
                                <field name="hear"/>
                            </group>
                            <group col="6">

                                <field name="foil"/>
                                <field name="friends"/>
                                <field name="hate"/>
                            </group>
                            <group col="6">

                                <field name="mode"/>
                                <field name="oppressed"/>
                                <field name="magic2"/>
                            </group>
                            <group col="6">

                                <field name="solve"/>
                                <field name="mis_tack"/>
                                <field name="sycologist"/>
                                <field name="volnteer"/>
                            </group>

                        </page>

                        <page string="Final Evaluation">
                            <group colspan="5" col="4">

                                <field name="look"/>
                                <field name="behavior"/>
                                <field name="place"/>
                                <field name="note"/>


                            </group>
                            <group>
                                <field name="dotor"/>

                            </group>
                        </page>
                    </notebook>


                </sheet>

            </form>
        </field>
    </record>
    <!-- start form viwe from lap Info -->
    <record model="ir.ui.view" id="eye_tree_view">
        <field name="name">assessment.tree</field>
        <field name="model">education.assessment</field>
        <field name="arch" type="xml">
            <tree string="Patient tree">
                <field name="name"/>
                <field name="program"/>
                <field name="dob"/>


            </tree>
        </field>
    </record>
    <!-- end of form viwe from lab Info -->

    <record model="ir.actions.act_window" id="assessment_list_action">
        <field name="name">Psychological Clinic</field>
        <field name="res_model">education.assessment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first patient
            </p>
        </field>
    </record>

</odoo>

