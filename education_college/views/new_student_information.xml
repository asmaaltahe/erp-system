<odoo>
    <data>
        <!--    form  to add new student basic information-->
        <record model="ir.ui.view" id="education_new_student_information_tree_view">
            <field name="name">new.student.tree</field>
            <field name="model">new.student</field>
            <field name="arch" type="xml">
                <tree string="New Student information tree">
                    <field name="name"/>
                    <field name="college_id"/>
                    <field name="program_id"/>
                    <field name="batch_id"/>
                    <field name="form_number"/>
                    <field name="type_acceptance"/>
                    <field name="year_stady"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="education_new_student_information_view_form">
            <field name="name">education.new.student.form</field>
            <field name="model">new.student</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Basic Information">
                    <header>
                        <button name="confirm_action" type="object" states="draft" string="confirm"
                                class="btn-primary"/>
                        <button name="waiting_approve_action" states="confirm" type="object" string="Waiting Approve"
                                class="btn-primary"/>
                        <button name="done_action" type="object" states="waiting_approve" string="Done"
                                class="btn-primary"/>
                        <button name="cancel_acrion" type="object" states="confirm,waiting_approve" string="Cancel"
                                class="oe_highligth"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done,waiting_approve"/>
                        <button class="oe_highlight" type="action" name="%(education_college.new_student)d"
                        string="Print"/>

                    </header>

                    <sheet>
                        <group>
                            <field name="data" readonly="1" />
                        </group>
                        <field name="image_1920" widget="image" class="oe_avatar" attrs="{'readonly':[('state','!=','draft')]}"
                               options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;image_128&quot;}" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Student's Name" required="True" attrs="{'readonly':[('state','!=','draft')]}"  readonly="1"/>
                            </h1>
                        </div>
                        <group col="4" colspan="2">
                            <field name="college_id" attrs="{'readonly':[('state','!=','draft')]}"  readonly="1" />
                            <field name="program_id" attrs="{'readonly':[('state','!=','draft')]}"  readonly="1" />
                            <field name="batch_id" attrs="{'readonly':[('state','!=','draft')]}"  readonly="1" />
                            <field name="form_number" attrs="{'readonly':[('state','!=','draft')]}"   readonly="1" />
                            <field name="type_acceptance" attrs="{'readonly':[('state','!=','draft')]}"  readonly="1" />
                            <field name="year_stady" attrs="{'readonly':[('state','!=','draft')]}"  readonly="1" />
                        </group>
                        <group col="4" colspan="4" name="Study_information" string="Study Information">
                            <field name="school_name" attrs="{'readonly':[('state','!=','draft')]}"   readonly="1"/>
                            <field name="course" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="sitting_number" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="ratio" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="type_of_certificate" attrs="{'readonly':[('state','!=','draft')]}"  />

                        </group>
                        <group col="4" colspan="4" name="name" string="Personal Information">
                            <field name="nationality_id" attrs="{'readonly':[('state','!=','draft')]}"  
                                   options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True,'no_open': True}" />
                            <field name="type_of_id" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="id_number" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="gender" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="social_status" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="religion" attrs="{'readonly':[('state','!=','draft')]}"  />
                        </group>
                        <group col="6" colspan="4">
                            <field name="address" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="brath_day" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="student_states" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="local" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="email" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="student_mobile" force_save="1" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="whatsapp_phone" force_save="1" attrs="{'readonly':[('state','!=','draft')]}"  />
                        </group>
                        <group string="Attachments" colspan="2" col="4">
                            <field name="national_card" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="school_certificate" attrs="{'readonly':[('state','!=','draft')]}"  />
                        </group>
                        <group string=" How did you hear about the college" col="6" colspan="2">
                            <field name="facebook"/>
                            <field name="website"/>
                            <field name="newspaper"/>
                            <field name="tv"/>
                            <field name="radio"/>
                            <field name="admission_book"/>
                        </group>
                        <group string="parent Information" col="4" colspan="2">
                            <field name="applicant" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="job" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="relative_relation" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="fother_address" attrs="{'readonly':[('state','!=','draft')]}"  />
                            <field name="telephone" attrs="{'readonly':[('state','!=','draft')]}"  />
                        </group>
                        <group>
                            <field name="comm_new"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="education_new_student_information_viwe_search" model="ir.ui.view">
            <field name="name">new.student.search</field>
            <field name="model">new.student</field>
            <field name="arch" type="xml">
                <search string="Basic Information">
                    <field name="name"/>
                    <field name="name"/>
                    <field name="college_id"/>
                    <field name="program_id"/>
                    <field name="batch_id"/>
                    <field name="form_number"/>
                    <field name="type_acceptance"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="education_new_student_information_list_action">
            <field name="name">Basic Information</field>
            <field name="res_model">new.student</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first new student information
                </p>
            </field>
        </record>

        <menuitem id="menu_new_students_basic_information" name="New Students"
                  parent="menu_basic_information_root"
                  action="education_new_student_information_list_action"
                  sequence="10"/>
    </data>
</odoo>