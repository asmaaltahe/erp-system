<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_report_view" model="ir.ui.view">
        <field name="name">account.report.view.form</field>
        <field name="model">account.report</field>
        <field name="arch" type="xml">
            <form string="Account Report">
                <group>
                    <field name="params" required="1"/>
                    <field name="student_ids" attrs="{'required': [('params', '=', 'studant')],
                                                     'invisible': [('params', '!=', 'studant')]}"/>
                    <field name="program" attrs="{'required': [('params', '=', 'program')],
                                                     'invisible': [('params', '!=', 'program')]}"/>
                </group>

                <group col="4">
                    <field name="program" attrs="{'required': [('params', '=', 'program_level')],
                                                     'invisible': [('params', '!=', 'program_level')]}"/>
                    <field name="level" attrs="{'required': [ ('params', '=', 'program_level')],
                                                     'invisible': [ ('params', '!=', 'program_level')]}"/>
                </group>

                <group col="6"  >
                    <field name="program" attrs="{'required': [('params', '=', 'program_level_semester')],
                    'invisible': [ ('params', '!=', 'program_level_semester')]}"/>
                    <field name="level" attrs="{'required': [ ('params', '=', 'program_level_semester')],
                     'invisible': [ ('params', '!=', 'program_level_semester')]}"/>
                    <field name="semester" attrs="{'required': [ ('params', '=', 'program_level_semester')],
                                                                         'invisible': [ ('params', '!=', 'program_level_semester')]}"/>

                </group>

                <footer>
                    <button name="print_accunt_report" type="object" class="btn-primary" string="Print"
                            icon="fa-print"/>
                    OR
                    <button string="cancel" class="btn-danger" special="cancel" icon="fa-close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="account_report_view" model="ir.actions.act_window">
        <field name="name">Report</field>
        <field name="res_model">account.report</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_report_view"/>
        <field name="target">new</field>
    </record>

</odoo>
